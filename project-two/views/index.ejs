<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body text-center card-shadow">
      <h1><i class="fab fa-node-js fa-3x"></i></h1>
      <%- include ("./partials/messages"); %>
        <p>Enter a string of numbers (seperated by ,)<br />to insert into a binary search tree</p>
        <form action="/" method="POST">
          <div class="form-group">
            <input type="text" id="numbers" name="numbers" class="form-control my-2" placeholder="Enter Numbers"
              value="<%= typeof numbers != 'undefined' ? numbers : '' %>" />
          </div>
          <div class="form-group ">
            <input type="radio" name="display_type" value="json" /> JSON
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <input type="radio" name="display_type" value="treeify" /> Treeify
          </div>
          <div class="form-group text-center mt-3">
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
          </div>
        </form>
    </div>
  </div>
</div>